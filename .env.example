# =============================================================================
# SmartEvaluator-Omni - Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Application Settings
APP_NAME=SmartEvaluator-Omni
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Cloud LLM API Keys
# =============================================================================

# Google Gemini (Agent 1 - Fact Checker)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Anthropic Claude (Agent 3 - Critical Bluff Detector)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# =============================================================================
# Local LLM Configuration (Ollama)
# =============================================================================

# Ollama Server (Agent 2 - Structure & Grammar)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=120

# =============================================================================
# Vector Database (Teacher Digital Twin Storage)
# =============================================================================

# ChromaDB (Local)
CHROMADB_PERSIST_DIR=./data/chromadb
CHROMADB_COLLECTION_NAME=teacher_personas

# Pinecone (Cloud - Optional)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-east-1-aws
# PINECONE_INDEX_NAME=teacher-personas

# =============================================================================
# Consensus Configuration
# =============================================================================

# Grading Mode: strict, balanced, creative
GRADING_MODE=balanced

# Plagiarism Threshold (0.0 - 1.0)
PLAGIARISM_THRESHOLD=0.7
AI_DETECTION_THRESHOLD=0.8

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
